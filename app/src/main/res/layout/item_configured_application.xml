<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/wrap">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:orientation="vertical"
        android:background="@color/theme_semi_grey"

        android:padding="@dimen/grid_item_padding">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/grid_movie_title_font_size"
            android:textColor="@color/white_text"
            android:textStyle="bold"
            android:layout_alignBottom="@id/app_icon"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="70dp"/>
        <TextView
            android:id="@+id/waste_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white_text"
            android:layout_marginTop="-5dp"
            android:layout_alignParentRight="true"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@id/waste_time"
            android:layout_below="@id/waste_time"
            android:layout_marginTop="5dp"
            android:background="@color/white_text"/>
        <TextView
            android:id="@+id/max_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white_text"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/waste_time"
            />
    </RelativeLayout>

</FrameLayout>